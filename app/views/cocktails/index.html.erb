<div class="title text-center">
  <h1>List of our Tiki Cocktails</h1>
</div>

<div>
  <%= link_to "Create a new Tiki Cocktail", new_cocktail_path %>
</div>

<div>
  <ul class="cocktail-list">
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= cocktail.name %> |
        <%= link_to "Description", cocktail_path(cocktail) %>
        <%= cl_image_tag cocktail.photo.key, height: 500, width: 650, crop: :fill %>
      </li>
    <% end %>
  </ul>
</div>
