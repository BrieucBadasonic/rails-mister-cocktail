<div class="title text-center">
  <h1>List of our Tiki Cocktails</h1>
</div>

<div class="title text-center">
  <%= link_to "Create a new Tiki Cocktail", new_cocktail_path, class: "cocktail-link" %>
</div>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-lg-4 my-3">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 800, width: 900, crop: :fill %>')">
            <p class="cocktail-card-name">
              <%= cocktail.name %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
